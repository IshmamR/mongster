{
  "name": "mongster",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "author": "IshmamR <ishmam785@gmail.com> (https://ishmam.dev)",
  "scripts": {
    "build:js": "bun run ./scripts/build.ts",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "bun run build:js && bun run build:ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "bun run tsc -p tsconfig.test.json && bun test",
    "lint": "bunx @biomejs/biome check --error-on-warnings .",
    "release": "bun run ./scripts/release.ts",
    "prepublishOnly": "bun run clean && bun run test && bun run build"
  },
  "dependencies": {
    "mongodb": "^6.20.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@inquirer/prompts": "^7.2.0",
    "@types/bun": "1.3.3",
    "mongodb-memory-server": "^10.4.1",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "description": "A better MongoDB ODM",
  "keywords": [
    "mongodb",
    "mongo",
    "odm",
    "typesafe",
    "typescript",
    "bun"
  ],
  "engines": {
    "bun": ">=1.2.20",
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ishmamR/mongster.git"
  },
  "bugs": {
    "url": "https://github.com/ishmamR/mongster/issues"
  },
  "homepage": "https://github.com/ishmamR/mongster#readme",
  "license": "MIT"
}